<head>
  <link rel="stylesheet" href="/assets/stylesheets/new_comments.css">
</head>
<body>
  <div class="newCommnet-container">
    <h2>Add New Comment</h2>
    <%= form_with(model: [@user, @post, Comment.new], url: user_post_comments_path(@user, @post)) do |form| %>
      <div class="comment-area">
        <%= form.label :text, "Comment", class: "label-top" %>
        <%= form.text_area :text, rows: 5, placeholder: "Add a comment" %>
      </div>
      <div class="actions">
        <%= form.submit 'Create Comment', class: 'add-new-btn' %>
      </div>
    <% end %>
    <div id="backContainer">
      <%= link_to '< Back', user_post_path(@user, @post), class: 'back-btn' %>
    </div>
  </div>  
</body>